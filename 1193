n = int(input())
sum, index, b, t = 1,0,1,1

for i in range(2,n):
    if n == 1:
        index = 1
        break
    elif n <= sum:
        index = i-1
        break
    sum += i
    
if index%2 == 0:
    b = index - (sum - n)
    t = 1 + (sum - n)
else:
    b = 1 + (sum - n)
    t = index - (sum - n)
    
print(str(t)+"/"+str(b))